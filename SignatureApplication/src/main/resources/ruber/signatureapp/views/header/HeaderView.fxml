<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="ruber.signatureapp.viewcontrollers.HeaderViewController">
    <stylesheets>
        <URL value="@header.css"/>
    </stylesheets>
    <HBox id="bannerPanel" alignment="BASELINE_LEFT" spacing="150">
        <padding>
            <Insets top="3" right="3" bottom="0" left="15"/>
        </padding>
        <ImageView>
            <image>
                <Image url="@logo_ulpgc.png"/>
            </image>
        </ImageView>
        <Label>Asistencia del Profesorado</Label>
    </HBox>
    <BorderPane id="infoPanel">
        <padding>
            <Insets top="3" right="5" bottom="3" left="15"/>
        </padding>
        <left>
            <HBox alignment="CENTER" >
                <Label fx:id="school" />
            </HBox>
        </left>
        <right>
            <HBox spacing="3" alignment="BOTTOM_CENTER">
                <Label fx:id="date" />
                <Label fx:id="time" />
            </HBox>
        </right>
    </BorderPane>
</VBox>